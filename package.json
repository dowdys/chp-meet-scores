{
  "name": "chp-meet-scores",
  "version": "0.1.0",
  "description": "Gymnastics Meet Scoring System - Desktop App",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build:main && concurrently \"webpack serve --config webpack.config.js --env target=renderer\" \"wait-on http://localhost:9000 && electron .\"",
    "build:main": "webpack --config webpack.config.js --env target=main",
    "build:renderer": "webpack --config webpack.config.js --env target=renderer --mode production",
    "build": "webpack --config webpack.config.js --env target=main --mode production && webpack --config webpack.config.js --env target=renderer --mode production",
    "dist": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "author": "Dowdy Sarvis",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "electron-store": "^8.1.0",
    "puppeteer-core": "^21.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
